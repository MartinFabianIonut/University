               </TableColumn>
               <TableColumn prefWidth="173.0" text="Start">
                  <cellValueFactory>
                     <PropertyValueFactory property="time" />
                  </cellValueFactory>
               </TableColumn>
               <TableColumn prefWidth="158.0" text="Punctaj">
